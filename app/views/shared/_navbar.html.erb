<div class="navbar-wagon <%= "navbar-classic" unless current_page?(root_path) %>">
  <!-- Logo -->
  <span class="navbar-wagon-brand">
    <%= link_to "<i class='fa fa-commenting-o'></i> SOS Food ".html_safe, root_path %>
  </span>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
<!--     <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <%= link_to t(".sign_out", default: "Déconnexion"), destroy_user_session_path, method: :delete %>
    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Espace asso"), user_path(current_user), class: "btn btn_transparent#{'_black' unless current_page?(root_path)}" %>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to t(".top_call_to_action", default: "S'inscrire"), new_user_registration_path, class: "btn btn_transparent#{'_black' unless current_page?(root_path)}" %>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li><%= link_to "Espace asso", user_path(current_user) %></li>
          <li><%= link_to t(".sign_out", default: "Déconnexion"), destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t(".top_call_to_action", default: "S'inscrire"), new_user_registration_path %></li>
          <li><%= link_to t(".sign_in", default: "Connexion"), new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


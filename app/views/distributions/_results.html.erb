                <h4 class="list-group-item-heading"><%= result[:distribution].display_name %></h4>
                <p class="list-group-item-text">
                  <%= result[:occurrence].in_time_zone("Paris").strftime("%Hh%M") %> Ã  <%=result[:occurrence].end_time.in_time_zone("Paris").strftime("%Hh%M") %><br>
                  <%= result[:distribution].address %>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
